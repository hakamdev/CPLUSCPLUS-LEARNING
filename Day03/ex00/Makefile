CC		=	clang++
CFLAGS	=	-Wall -Wextra -Werror
NAME	=	clapTrap
SRCS	=	ClapTrap.cpp main.cpp

all: $(NAME)

$(NAME): $(SRCS)
	@$(CC) $(CFLAGS) $(SRCS) -o $(NAME)

clean:
	@rm -rf *.o

fclean: clean
	@rm -rf $(NAME)

re: fclean all
